<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="@drawable/home_movie_background"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/home_movie_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_movie_img"
        android:background="@color/light_black">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/home_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textSize="17sp"
                tools:text="Movie Name" />

            <TextView
                android:id="@+id/home_movie_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:textColor="@color/dark_light"
                android:textSize="13sp"
                tools:text="Short Description" />

        </LinearLayout>

        <Button
            android:id="@+id/home_movie_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/buttons_background"
            android:text="@string/book"
            android:textColor="@color/colorPrimary" />

    </FrameLayout>


</RelativeLayout>